<body>
  <div class="container">
    <div class="row">
      <div class="col-md-8 offset-md-1">
        <h2>商品一覧</h2>
        <%= link_to new_admin_item_path do %>
          <i class="fas fa-plus"></i>
        <% end %>
        <table>
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>

          <tbody>
            <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td>
                <%= link_to admin_item_path(item.id) do %>
                  <%= item.name %>
                <% end %>
              </td>
              <td><%= item.price %></td>
              <td><%= item.genre.name %></td>
              <td>
                <% if item.is_active %>
                販売中
                <% else %>
                販売停止中
                <% end %>
              </td>
            </tr>

            <% end %>

          </tbody>
        </table>
        <%= paginate @items %>
      </div>
    </div>
  </div>
</body>